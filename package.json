{
  "name": "electron-react-template",
  "private": true,
  "version": "0.0.1",
  "main": "dist-electron/main/index.js",
  "description": "electron react template",
  "author": "Coke <jock74608@gmail.com>",
  "homepage": "https://github.com/GJCoke/electron-react-template.git",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build && electron-builder --mac --win --linux",
    "build:win": "tsc -b && vite build && electron-builder --win --x64",
    "build:mac": "tsc -b && vite build && electron-builder --mac",
    "build:linux": "tsc -b && vite build && electron-builder --linux",
    "preview": "vite preview",
    "lint": "eslint . --ext .js,.ts,.jsx,.tsx --fix",
    "format": "prettier --write .",
    "commit": "sa git-commit",
    "prepare": "simple-git-hooks"
  },
  "env": {
    "host": "127.0.0.1",
    "port": 13333
  },
  "build": {
    "appId": "com.example.electron",
    "productName": "electron-react-template",
    "directories": {
      "buildResources": "static/icons",
      "output": "release/v${version}-${platform}"
    },
    "files": [
      "dist-electron/**/*",
      "dist/**/*",
      "package.json",
      "static/**/*"
    ],
    "extraResources": [
      {
        "from": "static/icons/logo.png",
        "to": "${productName}.png"
      }
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "artifactName": "${productName}-v${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "shortcutName": "${productName}",
      "uninstallDisplayName": "${productName}",
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": true,
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "target": [
        "nsis", "zip"
      ],
      "artifactName": "${productName}-v${version}.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Development",
      "artifactName": "${productName}-v${version}.${ext}"
    }
  },
  "dependencies": {
    "@ant-design/v5-patch-for-react-19": "^1.0.3",
    "@iconify/react": "^6.0.0",
    "@unocss/preset-wind3": "^66.1.2",
    "antd": "^5.25.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "vite-plugin-svg-icons": "^2.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@unocss/cli": "^66.1.2",
    "@unocss/preset-icons": "^66.1.2",
    "@unocss/preset-uno": "^66.1.2",
    "@unocss/vite": "^66.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "electron": "^36.3.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "simple-git-hooks": "^2.13.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "unocss": "^66.1.2",
    "vite": "^6.3.5",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm run lint && pnpm run format",
    "commit-msg": "pnpm sa git-commit-verify"
  }
}
